<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hzq.testdelete.MainActivity">

    <Button
        android:text="获取信息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:id="@+id/get_button"
        android:textSize="18sp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/get_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"

        android:id="@+id/doub_list" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_dialog"
        android:layout_alignTop="@+id/get_button"
        android:id="@+id/imgdo"
        android:layout_above="@+id/doub_list" />

    <Button
        android:text="adb模式"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_next"
        android:onClick="next"
        android:layout_alignBaseline="@+id/get_button"
        android:layout_alignBottom="@+id/get_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <com.example.hzq.testdelete.RippleButton
    android:layout_width="250dp"
    android:layout_height="50dp"
        android:gravity="center"
    android:text="请正常点击我"

        android:id="@+id/rippleButton"

        android:layout_above="@+id/imgdo"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/bt_next"
        android:layout_alignEnd="@+id/bt_next"
        android:id="@+id/bt_recycler"
        android:onClick="RecyclerView" />

    <Button
        android:text="Recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/bt_next"
        android:layout_alignEnd="@+id/bt_next"
        android:id="@+id/button4"
        android:onClick="RecyclerView" />

    <Button
        android:text="Recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/bt_next"
        android:layout_alignEnd="@+id/bt_next"
        android:id="@+id/button3"
        android:onClick="RecyclerView" />

    <Button
        android:text="Recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/bt_next"
        android:layout_alignEnd="@+id/bt_next"
        android:id="@+id/button2"
        android:onClick="RecyclerView" />

    <Button
        android:text="greendao"
        android:onClick="green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_next"
        android:layout_alignLeft="@+id/bt_recycler"
        android:layout_alignStart="@+id/bt_recycler"
        android:id="@+id/button" />

</RelativeLayout>
